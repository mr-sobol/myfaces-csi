<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CorePanelFormLayout">
    <component tr:type="org.apache.myfaces.trinidad.CoreInputText" label="Attribute 1"/>
    <component tr:type="org.apache.myfaces.trinidad.CoreInputText" label="Attribute 2"/>
    <component tr:type="org.apache.myfaces.trinidad.CoreInputText" label="Attribute 3"/>
    <component tr:type="org.apache.myfaces.trinidad.CoreInputText" label="Attribute 4"/>
    <component tr:type="org.apache.myfaces.trinidad.CoreInputText" label="Attribute 5"/>
    <component tr:type="org.apache.myfaces.trinidad.CoreInputText" label="Attribute 6"/>
    <component tr:type="org.apache.myfaces.trinidad.CoreInputText" label="Attribute 7"/>
    <component tr:facet="footer" tr:type="org.apache.myfaces.trinidad.CoreInputText" label="Footer"/>
  </base-component>
  <attribute-test name="rows" value="2">
    <attribute-test name="maxColumns" value="2"/>
  </attribute-test>
  
  <attribute-test name="labelWidth" value="50%"/>
  <attribute-test name="fieldWidth" value="50%"/>

  <!-- Core attribute tests -->
  <attribute-test name="id"/>
  <attribute-test name="inlineStyle"/>
  <attribute-test name="inlineStyle" value="width: 50%"/>
  <boolean-test name="rendered"/>
  <attribute-test name="shortDesc"/>
  <attribute-test name="styleClass"/>

  <js-test/>
</test>
