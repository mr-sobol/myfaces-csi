<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CoreOutputDocument" 
                  value="#{simpleDocument}"
                  titleClass="titleClass"
                  separatorClass="separatorClass">
     <component tr:type="org.apache.myfaces.trinidad.CoreOutputFormatted"
                tr:facet="title"
                value="The title facet"/>
     <component tr:type="org.apache.myfaces.trinidad.CoreOutputFormatted"
                tr:facet="separator"
                value="The paragraph separator"/>
  </base-component>
  <!-- test the facets seperately so output not too big - see outputDocument.xml for attribute tests -->
</test>
