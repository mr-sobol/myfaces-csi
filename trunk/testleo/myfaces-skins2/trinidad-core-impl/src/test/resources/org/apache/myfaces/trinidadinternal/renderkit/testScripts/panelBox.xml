<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CorePanelBox">
    <component tr:type="org.apache.myfaces.trinidad.CorePanelGroupLayout" layout="vertical">
      <component tr:type="org.apache.myfaces.trinidad.CoreGoLink" text="link 1" destination="http://www.oracle.com"/>
      <component tr:type="org.apache.myfaces.trinidad.CoreGoLink" text="link 2" destination="http://www.oracle.com"/>
    </component>
    <component tr:type="org.apache.myfaces.trinidad.CorePanelGroupLayout" layout="vertical">
      <component tr:type="org.apache.myfaces.trinidad.CoreGoLink" text="link 3" destination="http://www.oracle.com"/>
      <component tr:type="org.apache.myfaces.trinidad.CoreGoLink" text="link 4" destination="http://www.oracle.com"/>
    </component>
  </base-component>
  
  <attribute-test name="background" value="light" matchesBase="true"/>
  <attribute-test name="background" value="medium"/>
  <attribute-test name="background" value="dark"/>
  <attribute-test name="background" value="transparent"/>
  <attribute-test name="icon" value="http://www.oracle.com/images/oracle.gif"/>
  <attribute-test name="text"/>
  <attribute-test name="contentStyle"/>
  <!--attribute-test name="width" value="40px"/-->
  <!--attribute-test name="width" value="40%"/-->
  
  <!-- Core attribute tests -->
  <attribute-test name="id"/>
  <attribute-test name="inlineStyle"/>
  <boolean-test name="rendered"/>
  <attribute-test name="shortDesc"/>
  <attribute-test name="styleClass"/>
  
  <js-test/>
</test>
