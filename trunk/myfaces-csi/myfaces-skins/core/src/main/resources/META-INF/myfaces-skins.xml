			<property name="padding">0px</property>
			<property name="margin">0px</property>
		</style>
		
		<style selector=".AFPanelNavigationVertical ul li a">
			<property name="display">block</property>		
			<property name="background-color">#D1E4E4</property>
			<property name="color">#294747</property>
			<property name="text-decoration">none</property>
			<property name="border-bottom">1px solid #87A8A8</property>
			<property name="display">block</property>
			<property name="padding">2px 20px</property>
			<property name="margin">0px</property>		
		</style>
		
		<style selector=".AFPanelNavigationVertical ul li a:visited">		
			<property name="color">#294747</property>
		</style>		
		<style selector=".AFPanelNavigationVertical ul li a:hover">				
			<property name="color">#FFFFFF</property>
			<property name="background-color">#87A8A8</property>
		</style>		
		<style selector=".AFPanelNavigationVertical ul li a:active">		
